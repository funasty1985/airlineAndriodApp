<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/flight_item_horizontal_padding"
    android:paddingRight="@dimen/flight_item_horizontal_padding"
    android:paddingTop="@dimen/flight_item_vertical_padding"
    android:paddingBottom="@dimen/flight_item_vertical_padding">

    <TextView
        android:id="@+id/airline_name_text_view"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/arrival_time_text_view"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end" />

    <TextView
        android:id="@+id/terminal_text_view"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end" />
</LinearLayout>

